  "code": "import GameEvent from \"../Control/GameEvent\";\r\nimport { EventManager } from \"../Manager/EventManager\";\r\nimport { BombData } from \"../Data/PlayerData\";\r\nimport BombBody from \"./Body/BombBody\";\r\nimport BoomView from \"./BoomView\";\r\nexport default class BombView {\r\n    constructor() {\r\n        this.bombType = 1;\r\n        this.direction = 1;\r\n        this.isPlayer = false;\r\n    }\r\n    initView(type, dir, s, p, offPos) {\r\n        this.bombType = type;\r\n        this.direction = dir;\r\n        this.parent = s;\r\n        this.isPlayer = p;\r\n        this.offPos = offPos;\r\n        Laya.Scene.load(\"BombBody.scene\", Laya.Handler.create(this, this.loadComplete));\r\n    }\r\n    loadComplete(s) {\r\n        console.log(\"bomb.scene--loadComplete\");\r\n        this.view = fairygui.UIPackage.createObject(\"Game\", \"Bomb\");\r\n        this.bomb = this.view.getChildAt(0).asLoader;\r\n        this.trans = this.view.getTransition(\"z1\");\r\n        this.scene = s;\r\n        this.scene.addComponent(BombBody);\r\n        this.body = this.scene.getComponent(Laya.RigidBody);\r\n        this.box = this.scene.getComponent(Laya.BoxCollider);\r\n        if (this.isPlayer) {\r\n            this.box.label = this.body.label = \"PlayerBomb\";\r\n        }\r\n        else {\r\n            this.box.label = this.body.label = \"enemyBomb\";\r\n        }\r\n        this.bomb.url = \"ui://Game/zhadan_\" + this.bombType;\r\n        if (this.bombType == BombData.BOMB_2)\r\n            this.bomb.content.setPlaySettings(0, 0, 1, 0);\r\n        if (this.bombType != BombData.BOMB_4)\r\n            this.trans.play(null, 1);\r\n        this.scene.addChild(this.view.displayObject);\r\n        this.parent.addChild(this.scene);\r\n        this.setBombPos();\r\n        EventManager.instance.addNotice(GameEvent.BOMB_DISPOSE, this, this.dispose);\r\n    }\r\n    setBombPos() {\r\n        if (this.direction == 1) {\r\n            this.view.setSkew(0, 0);\r\n            this.scene.x = 50;\r\n            this.body.setVelocity({ x: 7, y: -6 });\r\n        }\r\n        else {\r\n            this.view.setSkew(180, 180);\r\n            this.body.setVelocity({ x: -7, y: -6 });\r\n        }\r\n        this.scene.y = 0;\r\n        if (this.offPos) {\r\n            this.scene.x += this.offPos.x;\r\n            this.scene.y += this.offPos.y;\r\n        }\r\n    }\r\n    showBoomView() {\r\n        var bomb = Laya.Pool.getItemByClass(\"boomView\", BoomView);\r\n        var p = new Laya.Point(this.scene.x, this.scene.y);\r\n        bomb.initView(this.getBoomType(), this.parent, this.isPlayer, p);\r\n    }\r\n    getBoomType() {\r\n        if (this.bombType == BombData.BOMB_1 || this.bombType == BombData.BOMB_2) {\r\n            return 1;\r\n        }\r\n        else if (this.bombType == BombData.BOMB_3) {\r\n            return 2;\r\n        }\r\n        else if (this.bombType == BombData.BOMB_4) {\r\n            return 3;\r\n        }\r\n        return 1;\r\n    }\r\n    dispose(s) {\r\n        if (s == this.scene) {\r\n            this.showBoomView();\r\n            EventManager.instance.offNotice(GameEvent.BOMB_DISPOSE, this, this.dispose);\r\n            Laya.Pool.recover(\"bombView\", this);\r\n            this.view.dispose();\r\n            console.log(\"销毁炸弹--\", this.bombType);\r\n        }\r\n    }\r\n}\r\n",
